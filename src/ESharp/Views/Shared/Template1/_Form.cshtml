@model ESharp.Models.Template01ViewModel
<script src="~/js/admin-template1.js"></script>
    <table>
        <tr>
            <td width="60%">
                <form method="post">
                    <div>
                        <div class="col-sm-12">
                            <div class="panel panel-info">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="control-label">Введите название статьи:</label>
                                        <input type="hidden" id="oldchapter" name="OldChapter" class="form-control" value="@Model.Chapter" placeholder="Например, Делегаты и События" minlength="2" maxlength="30">
                                        <input type="hidden" id="oldarticle" name="OldArticle" class="form-control" value="@Model.Title" placeholder="Например, Делегаты и События" minlength="2" maxlength="30">

                                        <input type="text" id="title" name="Title" class="form-control" value="@Model.Title" placeholder="Например, Делегаты и События" minlength="2" maxlength="30">
                                    </div>
                                    <div class="form-inline">
                                        <label class="control-label">Выберите раздел:</label>
                                        <select class="form-control" style="width: 74%; margin-left: 2%" name="Chapter" id="chapterId">
                                            <option value="non"></option>
                                            @foreach (string c in ViewBag.Chapters)
                                            {
                                                if (@Model.Chapter == @c)
                                                {
                                                    <option selected="selected" value="@c">@c</option>
                                                }
                                                else
                                                {
                                                    <option value="@c">@c</option>
                                                }

                                            }
                                        </select>
                                    </div>
                                    <hr>
                                    <div class="form-group has-feedback">
                                        <label class="control-label">Введите сообщение:</label>
                                        <textarea id="description" class="form-control" rows="6" name="Description">@Model.Description</textarea>
                                    </div>
                                    <div class="form-inline">
                                        <label class="control-label">Выберите картинку:</label>
                                        <input type="file" id="file" name="ImgUrl0" class="form-control" value="" style="width: 72%; margin-left: 2%">
                                    </div>
                                    <hr />
                                    <p>@Html.ValidationSummary()</p>
                                    <button type="button" class="btn btn-primary" id="back-chooseTemplate">Назад</button>
                                    <button type="button" class="btn btn-primary pull-right" id="next-chooseTemplate2">Далее</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </td>
            <td width="40%">
                <button class="templateimg" style="border: 0px; padding-left:0px"><img src="@Url.Content("../images/1.png")" style="height: 290px"></button>
            </td>
        </tr>
    </table>
    <script>
        var data = new FormData();
        $(window).ready(function () {
            data.append("OldArticle", $('#oldarticle').val());
            data.append("OldChapter", $('#oldchapter').val());
        });
    </script>
