@using System.Net
@model ESharp.Models.Template01ViewModel

@{
    ViewBag.Title = Model.Title + "(Preview)";  
}

<p><h1>@Model.Title</h1></p>
@if (Model.ImgUrl0 != null)
{
    <img  src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImgUrl0))" style="max-height: 300px"/>
}
<p>@Model.Description</p>


<button type="submit" class="btn btn-primary" id="back-choosePreview">Назад</button>

    <button type="submit" class="btn btn-primary pull-right" id="next-choosePreview">Далее</button>


<script>
    $('#back-choosePreview').click(function() {

        $('#dialogPreview').dialog('close');
        $('#dialogChangeArticle').dialog('close');
        $('#dialogChoose').dialog('open');

        $.ajax({
            type: "Get",
            url: '@Url.Action("GetFormPartial","Admin")',
            contentType: 'application/json; charset=utf-8',
            dataType: 'html',
            success: function (data) {
                alert(data);
                $('#dialogChoose').html(data);
            }
        });

        $(document).ajaxStart(function () {
            $('#dialogChoose').html("Загрузка");
        });
    });

    $('#next-choosePreview').click(function () {

        $.ajax({
            type: "Get",
            url: '@Url.Action("AcceptForm","Admin")',
            contentType: 'application/json; charset=utf-8',
            dataType: 'html'
        });

        $('#dialogPreview').dialog('close');
        $('#dialog').dialog('close');
        $('#dialogChangeArticle').dialog('close');
        alert("Статья добавлена успешно");
        window.location.href = "@Url.Action("Index", "Admin")";
    });


</script>

